<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="firstTry.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:firstTry.View"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <TabBar x:Name="PhoneTabs">
        <Tab Title="Home" Icon="maison.png">
             <ShellContent ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage"/>
        </Tab>
        <Tab Title="Search" Icon="search.png">
            <ShellContent ContentTemplate="{DataTemplate local:SearchPage}" Route="SearchPage"/>
        </Tab>
        <Tab Title="Profil" Icon="profil.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilPage}" Route="ProfilPage"/>
        </Tab>
     </TabBar>
       
    
    
    

</Shell>
