<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GestionDeParking.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GestionDeParking.View"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <TabBar x:Name="PhoneTabs">
        <Tab Title="Home" Icon="maison.png">
             <ShellContent ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage"/>
        </Tab>
        <Tab Title="Search" Icon="search.png">
            <ShellContent ContentTemplate="{DataTemplate local:SearchPage}" Route="SearchPage"/>
        </Tab>
        <Tab Title="ADD" Icon="plus.png">
            <ShellContent ContentTemplate="{DataTemplate local:AddPage}" Route="AddPage"/>
        </Tab>
     </TabBar>
    <ShellContent
        Title="Popup Page"
        ContentTemplate="{DataTemplate local:PopupPage}"
        Route="PopupPage" />
       
    
    
    

</Shell>
